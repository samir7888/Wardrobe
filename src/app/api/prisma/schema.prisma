generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Category {
  TOP
  BOTTOM
  OUTERWEAR
  FOOTWEAR
  ACCESSORY
}

model User {
  id        String         @id @default(cuid())
  email     String         @unique
  name      String
  password  String
  items     WardrobeItem[]
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
}

model WardrobeItem {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  title     String
  category  Category
  color     String?
  season    String? // "summer|winter|all"
  imageUrl  String
  cloudId   String // Cloudinary public_id
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, category])
  @@index([createdAt])
}
